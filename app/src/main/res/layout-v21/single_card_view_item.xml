<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        app:cardElevation="3dp"
        android:layout_marginBottom="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="TextView"
                android:layout_toRightOf="@id/plant_image"/>


            <ImageView
                android:id="@+id/water_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_water"
                android:layout_toRightOf="@id/plant_image"
                android:layout_below="@id/textView7"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:textSize="12sp"
                android:layout_toRightOf="@id/water_icon"
                android:layout_alignTop="@id/water_icon"/>

            <ImageView
                android:id="@+id/sun_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_sun"
                android:layout_below="@id/water_icon"
                android:layout_alignLeft="@id/water_icon"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_toRightOf="@id/sun_icon"
                android:layout_alignTop="@id/sun_icon"/>

            <ImageView
                android:id="@+id/grass_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_leaf"
                android:layout_below="@id/sun_icon"
                android:layout_alignLeft="@id/water_icon"/>

            <TextView
                android:id="@+id/tv_grass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_toRightOf="@id/grass_icon"
                android:layout_alignTop="@id/grass_icon"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>