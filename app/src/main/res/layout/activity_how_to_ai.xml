<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HowToAiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tv_take_photo_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Taking a photo"
            android:textSize="18sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/ic_left"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Click the camera icon in search page."
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:background="@drawable/introduction_image_recognition"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Take a photo."
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:background="@drawable/introduction_take_photo"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. The result will be shown."
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:background="@drawable/introduction_result"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>